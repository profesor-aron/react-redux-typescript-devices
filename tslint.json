{
  "extends": [
    "tslint:latest"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "no-implicit-dependencies": [true, "dev"],
    "no-empty": false,
    "no-submodule-imports": [true, "semantic-ui-css"]
  }
}
